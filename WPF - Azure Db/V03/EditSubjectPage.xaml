<local:FramedPage x:Class="V03.EditSubjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:V03"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditSubjectPage">

    <Grid x:Name="GridContainer" Background="{StaticResource GradientBackground}">
        <Label Foreground="White" Content="Subject Name" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Height="51" Width="84"/>
        <TextBox x:Name="TbName" Text="{Binding Name}" HorizontalAlignment="Left" Margin="91,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198"  Height="25"/>
        <Button x:Name="BtnBack" Click="BtnBack_Click" Background="Transparent" HorizontalAlignment="Left" Margin="23,24,0,0" VerticalAlignment="Top" Height="50" Width="65">
            <Image Source="/Assets/back.png"/>
        </Button>
        <Button x:Name="BtnCommit" Click="BtnCommit_Click" Foreground="White" Background="Green" Content="Commit" HorizontalAlignment="Left" Margin="23,169,0,0" VerticalAlignment="Top" Height="26" Width="99"/>

    </Grid>
</local:FramedPage>
